<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoolCatsCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/darkCoolGray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CalculatorButton">
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:onClick">onClick</item>
    </style>
    <style name="ResultTextview">
        <item name="android:background">@color/darkCoolGray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/zero</item>
        <item name="android:textSize">48sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_weight">.10</item>
        <item name="android:gravity">bottom|end</item>
    </style>
    <style name="CalculusButton">
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:onClick">onClick</item>
    </style>

</resources>